
#include<bits/stdc++.h>
using namespace std ;
int main ()
{
    int t ; cin>>t;
    for(int i=0;i<t;i++)
    {
        int n ;
        cin>>n;
        if(n%2==0)
        {
            for(int j=0;j<n;j++)
            {
                for(int k=0;k<n;k++)
                {
                    cout<<"-1"<<" ";
                }
                cout<<endl;
            }
        }
        else
        {
            for(int j=0 ;j<n;j++)
            {
                for(int k=0;k<n;k++)
                {
                    if(j==k)
                    {
                        cout<<"-1"<<" ";
                    }
                    else
                    {
                        cout<<"1"<<" ";
                    }
                }
                cout<<endl;
            }
        }
        
    }
    return 0;
}
